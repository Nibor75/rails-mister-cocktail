<h1><%= @cocktail.name %></h1>

<p>description du cocktail :</p>

<ul>
  <% @cocktail.doses.each do |dose| %>
   <li>
    <%= dose.description %> | <%= dose.ingredient.name %> <br>
    <%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }  %>
    <p></p>
    </li>
  <% end %>
</ul>
<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>

